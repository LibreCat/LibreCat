[%- thisPerson = h.get_person(session.user_id) -%]
[%- qp = request.params.hash %]
[%- qp.delete('splat') %]
[%- current_lang = h.locale %]
[% lf = h.config.locale.$current_lang -%]
[%- style = qp.style || h.config.citation.csl.default_style -%]

<!-- BEGIN navbar.tt -->
<header>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand helpme" data-placement="bottom" title="[% h.loc("help.home") %]" href="[% h.uri_for('/') %]"><img src="[% uri_base %]/images/brand_logo.png" alt="" /></a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav">
                [% style = h.extract_params.style; sort = h.extract_params.item('sort') %]
                <li class="helpme" data-placement="bottom" title="[% h.loc("help.brand") %]">
                  [% IF session.user %]
                    [% l_params = {} %]
                    [% IF style %]
                      [% l_params.style = style %]
                    [% END %]
                    [% IF sort AND sort.0 %]
                      [% l_params.sort = [] %]
                      [% FOREACH s IN sort %]
                        [% l_params.sort.push(s) %]
                      [% END %]
                    [% END %]
                    [% SET home_url = h.uri_for('/librecat', l_params) %]
                  [% ELSE %]
                    [% SET home_url = h.uri_for('/') %]
                  [% END %]
                  <a href="[% home_url | html %]">
                    <span class="fa fa-home"></span>
                    [% IF session.role == 'super_admin' %]<span class="hidden-sm">[% END %][% h.loc("header.brand") %][% IF session.role == 'super_admin' %]</span>[% END %]
                  </a>
                </li>
                [%- IF session.user %]
                <li class="helpme" data-placement="bottom" title="[% h.loc("help.my_author_page") %]"><a href="[% h.uri_for('/person/' _ session.user_id) | html %]"><span class="fa fa-list-alt"></span>[% h.loc("header.my_author_page") %]</a></li>
                [%- END %]
                [%- IF session.role && session.role == 'super_admin' %]
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-wrench"></span>[% h.loc("header.admin_menu.admin") %] <span class="fa fa-chevron-down"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="[% h.uri_for('/librecat/admin/account') %]"><span class="fa fa-user"></span>[% h.loc("header.admin_menu.manage_accounts") %]</a></li>
                        <li><a href="[% h.uri_for('/librecat/admin/project') %]"><span class="fa fa-tasks"></span>[% h.loc("header.admin_menu.manage_projects") %]</a></li>
                        <li><a href="[% h.uri_for('/librecat/admin/research_group') %]"><span class="fa fa-group fw"></span>[% h.loc("header.admin_menu.manage_research_groups") %]</a></li>
                    </ul>
                </li>
                [%- END %]
            </ul>
            <ul class="nav navbar-nav navbar-right">
                [% FOREACH lang IN h.available_locales %]
                  [% NEXT IF lang == current_lang %]
                  <li class="helpme helpme-md" data-placement="left" title="[% h.loc("help.change_language") %]">
                      <a href="[% h.uri_for_locale(lang) %]">
                        <span class="fa fa-flag"></span>
                        <span class="hidden-sm">[% h.locale_long(lang) %]</span>
                        <span class="hidden-md hidden-xs hidden-lg">[% h.locale_long(lang) %]</span>
                      </a>
                  </li>
                [% END %]
                [%- IF session.user %]
                <li class="dropdown"><a href="#" class="dropdown-toggle helpme helpme-md" data-placement="bottom" title="[% h.loc("help.user_settings") %]" data-toggle="dropdown"><span class="fa fa-user"></span> [% h.loc("header.settings") %] <span class="fa fa-chevron-down"></span></a>
                    <div id="settings" class="dropdown-menu">
                        [% INCLUDE backend/user_settings.tt %]
                    </div>
                </li>
                [%- END %]
                [%- IF session.user %]
                <li><a href="[% h.uri_for('/logout') %]"><span class="fa fa-sign-out"></span><span class="hidden-sm">[% h.loc("main_page.logout") %]</span></a></li>
                [%- ELSE %]
                <li><a href="[% h.uri_for('/login') %]"><span class="fa fa-sign-out"></span><span class="hidden-sm">[% h.loc("main_page.login") %]</span></a></li>
                [%- END %]
            </ul>
        </div><!-- /.navbar-collapse -->
        <!--
        <div class="container">
            <div class="row">
                <div class="col-xs-1 col-sm-2 col-md-offset-1">
                    [% current_lang %]
                </div>
            </div>
        </div>
        -->
        <!-- /container -->
    </nav>
    <div class="modal" id="selectAFF">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Title</h4>
                    <div><small>Click a name to choose. Click <span class="fa fa-chevron-down"></span> to show more.</small></div>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
</header>
<main class="front"[% IF backend %] class="backend"[% END %]>
    <div class="container[% IF title OR name %] title[%END %][% IF _id %] publication[% END %]">
<!-- END navbar.tt -->
