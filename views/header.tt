<!DOCTYPE html>
<html[% IF bag == 'home' %] ng-app="angularController"[% END %]>
[% lang = session.lang ? session.lang : h.config.default_lang -%]
[% lf = h.config.language.$lang -%]

<!-- BEGIN header.tt -->

  <head>
    <title>
      [% IF title %][% title %]
      [% ELSIF request.path.match("publication") %]PUB &ndash; [% lf.tabs.publications %]
      [% ELSIF request.path.match("data") %][% lf.tabs.data_publications %] ([% lf.header.title_long %])
      [% ELSIF request.path.match("person/") %][% lf.header.title_person %] [% thisPerson.first_name %] [% thisPerson.last_name %]
      [% ELSIF request.path.match("person") %][% lf.tabs.authors %] ([% lf.header.title_long %])
      [% ELSIF request.path.match("about") %][% lf.tabs.about %] ([% lf.header.title_long %])
      [% ELSIF request.path.match("faq") %][% lf.tabs.faq %] ([% lf.header.title_long %])
      [% ELSIF request.path.match("contact") %][% lf.tabs.contact %] ([% lf.header.title_long %])
      [% ELSIF request.path.match("policy") %][% lf.tabs.policy %] ([% lf.header.title_long %])
      [% ELSIF request.path.match("pubtheses") %]PUB Theses ([% lf.header.title %])
      [% ELSE %][% lf.header.title_long %]
      [% END %]
    </title>

    <link rel="icon" href="/images/icon_uni.png" type="image/png">
    [% IF title AND !backend %]
      <!-- Google Scholar -->
      [% IF title %]<meta name="citation_title" content="[% title %]">[% END %]
      [% FOREACH author_entry IN author %]<meta name="citation_author" content="[% author_entry.full_name %]">
      [% END -%]
      [% IF year %]<meta name="citation_date" content="[% year %]">[% END %]
      [% IF file %][% FOREACH fi IN file %][% IF fi.file_name %]
      <meta name="citation_pdf_url" content="[% h.host %][% request.path %]/download/[% _id %]/[% fi.file_id %]">[% END %][% END %][% END %]
      [% IF doi %]<meta name="citation_pdf_url" content="http://doi.org/[% doi %]">[% ELSIF link %]<meta name="citation_pdf_url" content="[% link.0.url %]">[% END %]
      [% IF publication %]<meta name="citation_journal_title" content="[% publication %]" />[% END %]
      [% IF volume %]<meta name="citation_volume" content="[% volume %]" />[% END %]
      [% IF issue %]<meta name="citation_issue" content="[% issue %]" />[% END %]
      [% IF pagesStart %]<meta name="citation_startpage" content="[% pagesStart %]" />[% END %]
      [% IF pagesEnd %]<meta name="citation_lastpage" content="[% pagesEnd %]" />[% END %]
      [% IF issn %]<meta name="citation_issn" content="[% issn.0 %]">[% END %]
      [% IF isbn %]<meta name="citation_isbn" content="[% isbn.0 %]">[% END %]
      <!-- DC-Tags -->
      <link rel="schema.DC" href="http://purl.org/dc/elements/1.1/">
      <meta name="DC.title" content="[% IF personPageTitle %][% personPageTitle %][% ELSE %][% title %][% END %]">
      [% FOREACH author_entry IN author %]<meta name="DC.creator" content="[% author_entry.full_name %]">
      [% END %]
      [% IF year %]<meta name="DC.date" content="[% year %]">[% END %]
      [% IF language %]<meta name="DC.language" content="[% language.0.iso %]">[% END %]
      <meta name="DC.identifier" content="[% h.host %][% request.path %]/[% _id %]">
      [% IF abstract %][% FOREACH abstract_entry IN abstract %][% UNLESS loop.first %][% END %]<meta name="DC.description" content="[% abstract_entry.text | html %]">[% END %][% END %]
      [% IF cc_license %]<meta name="DC.rights" scheme="DCTERMS.URI" content="http://creativecommons.org/[% SWITCH cc_license %][% CASE 'cc_by' %]licenses/by/4.0/[% CASE 'cc_by_sa' %]licenses/by-sa/4.0/[% CASE 'cc_0' %]publicdomain/zero/1.0/[% END %]">[% END %]
      [% FOREACH rel_entry IN entry.host %][% IF rel_entry.issn %]<meta name="DC.source.ISSN" content="[% rel_entry.issn.0 %]">[% END %][% IF rel_entry.isbn %]<meta name="DC.source.ISBN" content="[% rel_entry.isbn.0 %]">[% END %][% END %]
      [% lowtype = type.lower %]
      <meta name="DC.type" content="[% h.get_list('gs_doc_type').$lowtype %]">
      [% IF doi %]<link rel="DC.relation" href="http://doi.org/[% doi %]">[% END %]
      [% IF urn %]<link rel="DC.relation" href="http://nbn-resolving.de/[% urn %]">[% END %]
      [% IF issn %]<link rel="DC.relation" href="urn:ISSN:[% issn.0 %]">[% END %]
      [% IF isbn %]<link rel="DC.relation" href="urn:ISBN:[% isbn.0 %]">[% END %]
    [% END %]
    [% reqpath = request.path -%]
    [% personid = reqpath.search('person/(\d{1,})') -%]
    [% query = qp.q | replace('"', '&quot;') -%]
    [% IF request.path.match("person/") %]
      <link rel="alternate" type="application/rss+xml" href="[% h.newuri_for('/feed/daily', qp, q="person=$personid") %]" title="[% thisPerson.first_name %] [% thisPerson.last_name %]'s Publication (today)">
      <link rel="alternate" type="application/rss+xml" href="[% h.newuri_for('/feed/weekly', qp, q="person=$personid") %]" title="[% thisPerson.first_name %] [% thisPerson.last_name %]'s Publication (last week)">
      <link rel="alternate" type="application/rss+xml" href="[% h.newuri_for('/feed/monthly', qp, q="person=$personid") %]" title="[% thisPerson.first_name %] [% thisPerson.last_name %]'s Publication (last month)">
    [% ELSIF request.path.match("text") %]
      <link rel="alternate" type="application/rss+xml" href="[% h.newuri_for('/feed/monthly', qp, q="$query") %]" title="Publications last month">
    [% END %]
    [% UNLESS backend %]
    <meta name="robots" content="index,follow,noimageindex" />
    [% ELSE -%]
    <meta name="robots" content="noindex,nofollow,noimageindex" />
    [% END %]
    [% INCLUDE head_meta.tt %]
  </head>

  <body[% IF bag == 'home' %] ng-controller="angularSearch"[% END %] itemscope itemtype="http://schema.org/WebPage">

  [% INCLUDE navbar.tt %]

<!-- END header.tt -->