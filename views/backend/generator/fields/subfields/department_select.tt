[% xdepartments = h.search_department({"hierarchy"="1"}) %][% FOREACH dept IN xdepartments.keys.sort %]<a href="#" class="selectme" data-index="' + index + '" id="[% xdepartments.$dept.oId %]">[% dept %]</a>[% IF xdepartments.$dept.keys.size > 2 %] <a href="#subdepts_[% xdepartments.$dept.oId %]" data-toggle="collapse"><span class="glyphicon glyphicon-chevron-down"></span></a>[% END %]<br /><div id="subdepts_[% xdepartments.$dept.oId %]" class="panel-collapse collapse">[% FOREACH subdept IN xdepartments.$dept.keys.sort %][% NEXT IF subdept == "oId" OR subdept == "display" %]<span style="padding-left:20px;"><a href="#" class="selectme" data-index="' + index + '" data-label="[% xdepartments.$dept.$subdept.display %]" id="[% xdepartments.$dept.$subdept.oId %]">[% subdept %]</a></span>[% IF xdepartments.$dept.$subdept.keys.size >2 %] <a href="#subsubdepts_[% xdepartments.$dept.$subdept.oId %]" data-toggle="collapse"><span class="glyphicon glyphicon-chevron-down"></span></a>[% END %]<br /><div id="subsubdepts_[% xdepartments.$dept.$subdept.oId %]" class="panel-collapse collapse">[% FOREACH subsubdept IN xdepartments.$dept.$subdept.keys.sort %][% NEXT IF subsubdept == "oId" OR subsubdept == "display" %]<span style="padding-left:40px;"><a href="#" class="selectme" data-index="' + index + '" data-label="[% xdepartments.$dept.$subdept.$subsubdept.display %]" id="[% xdepartments.$dept.$subdept.$subsubdept.oId %]">[% subsubdept %]</a></span><br />[% END %]</div>[% END %]</div>[% END %]