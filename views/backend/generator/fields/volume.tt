<div class="row innerrow">
  <div class="col-md-2 hidden-xs hidden-sm">
    {% IF fields.basic_fields.volume.mandatory OR fields.supplementary_fields.volume.mandatory %}<span class="starMandatory">{% END %}
    <label for="id_volume">
      [% h.loc("forms.${type}.field.volume.label") %]
    </label>
    {% IF fields.basic_fields.volume.mandatory OR fields.supplementary_fields.volume.mandatory %}</span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="form-group col-md-3 col-xs-11">
        <div class="input-group sticky">
          <div class="input-group-addon hidden-lg hidden-md">[% h.loc("forms.${type}.field.volume.label") %]</div>
          <input type="text" name="volume" id="id_volume" value="[% volume | html %]" placeholder="[% h.loc("forms.${type}.field.volume.placeholder") | html %]" class="sticky form-control{% IF fields.basic_fields.volume.mandatory OR fields.supplementary_fields.volume.mandatory %} required{% END %}"{% IF fields.basic_fields.volume.readonly OR fields.supplementary_fields.volume.readonly %} readonly="readonly"{% END %}>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
