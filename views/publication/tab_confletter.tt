
<!-- BEGIN publication/tab_confletter.tt -->

<div class="tab-pane" id="confletter">
  <div class="row">
    [% IF confLetter.size %]
      <div class="col-md-2 text-muted">
        [% h.loc("frontdoor.tabs.confirmation_letter.confirmation") %]
      </div>
      <div class="col-md-10">
        [% FOREACH conf IN confLetter %]
          <a href="[% uri_base %]/download/[% _id %]/[% conf.file_id %]/[% conf.file_name %]" class="description" data-html="true" data-placement="right" rel="tooltip" title="[% IF conf.description %]<i>Description:</i><br />[% conf.description | html %]<br /><br />[% END %]<i>Filename:</i><br />[% conf.file_name | html %]">[% h.loc("frontdoor.tabs.confirmation_letter.label") %]</a><br />
          <script>
            $('a.description').tooltip();
          </script>
        [% END %]
      </div>
    [% END %]
  </div><!-- frontdoor -->
</div><!-- tab-pane relMat -->

<!-- ENd publication/tab_confletter.tt -->
